@model IEnumerable<PatientVitals>

@{
    ViewData["Title"] = "Vitals";
    Layout = "_AdminLayout";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Nurse" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Patient Vitals</li>
    </ol>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Patient Vitals</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table class="table table-bordered table-hover align-middle" style="width: 100%" id="dataTable">
                        <thead>
                            <tr>
                                <th style="display: none;">
                                    ID
                                </th>
                                <th>
                                    Patient ID
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Temperature
                                </th>
                                <th>
                                    Blood Pressure
                                </th>
                                <th>
                                    Weight
                                </th>
                                <th>
                                    Date
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="display:none;" width="15%">@item.Id</td>
                                    <td width="15%">@item.PatientId</td>
                                    <td width="15%">@item.Name</td>
                                    <td width="15%">@item.Temperature</td>
                                    <td width="15%">@item.Bp</td>
                                    <td width="15%">@item.Weight</td>
                                    <td width="15%">@item.Date</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No patients vitals available.</p>
                }
            </div>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
</div>

