@model HMS.Models.ViewModels.MedicineVm
@{
    ViewData["Title"] = "EditMedicine";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Medicine</title>
</head>
<body>
    <main>
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <!-- Page Heading -->
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-controller="Pharmacy" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Edit Medicine</li>
            </ol>

            <!-- Body -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Edit Medicine</h6>
                </div>
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-8">
                            <form asp-action="EditMedicine" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input hidden asp-for="Medicine.Id" />

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Medicine.Name" class="form-control" />
                                    <label asp-for="Medicine.Name" class="control-label"></label>
                                    <span asp-validation-for="Medicine.Name" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <label asp-for="Medicine.Description"></label>
                                    <textarea asp-for="Medicine.Description" class="form-control" placeholder="Description" id="description" style="height: 100px"></textarea>
                                    <span asp-validation-for="Medicine.Description" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Medicine.Cost" class="form-control" />
                                    <label asp-for="Medicine.Cost" class="control-label"></label>
                                    <span asp-validation-for="Medicine.Cost" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Medicine.Quantity" class="form-control" />
                                    <label asp-for="Medicine.Quantity" class="control-label"></label>
                                    <span asp-validation-for="Medicine.Quantity" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Medicine.NHIS" class="form-control" />
                                    <label asp-for="Medicine.NHIS" class="control-label"></label>
                                    <span asp-validation-for="Medicine.NHIS" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Medicines">Back to List</a>
                    </div>
                </div>
            </div>

            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
        </div>
    </main>
</body>
</html>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}