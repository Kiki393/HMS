@using HMS.Models.ViewModels
@model Transactions
@{
    ViewData["Title"] = "Dispense";
    Layout = "_AdminLayout";

    List<PrescriptionVm> details = (List<PrescriptionVm>)ViewData["details"];
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Pharmacy" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Dispense</li>
    </ol>

    <!-- Body -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Dispense Drugs</h6>
        </div>
        <div class="card-body">

            <div class="form-group">
                <div class="col-md-8">
                    <div class="form-group form-floating mb-3">
                        <input value="@TempData["id"]" class="form-control" placeholder="Patient Id" disabled />
                        <label>Patient Id</label>
                    </div>

                    @if (details != null)
                    {
                        @foreach (var item in details)
                        {
                            <div class="form-group form-floating mb-3">
                                <textarea asp-for="@item.Prescription" class="form-control" placeholder="Message" disabled></textarea>
                                <label asp-for="@item.Prescription"></label>
                            </div>
                        }
                    }

                    <form method="post" asp-action="CompleteDispense">
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Total" class="form-control" placeholder="Total" />
                            <label asp-for="Total"></label>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <input type="submit" value="Done" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
</div>


