@model Medicine

@{
    ViewData["Title"] = "AddMedicine";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Medicine</title>
</head>
<body>
    <main>
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <!-- Page Heading -->
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-controller="Pharmacy" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Add Medicine</li>
            </ol>

            <!-- Body -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Add Medicine</h6>
                </div>
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-8">
                            <form asp-action="AddMedicine" method="post" id="medicine" class="mt-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Name"/>
                                    <label asp-for="Name"></label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="number" asp-for="Cost" class="form-control" placeholder="Cost"/>
                                    <label asp-for="Cost"></label>
                                    <span asp-validation-for="Cost" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <textarea asp-for="Description" class="form-control" placeholder="Description" id="description" style="height: 100px"></textarea>
                                    <label asp-for="Description"></label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="number" asp-for="Quantity" class="form-control" placeholder="Quantity"/>
                                    <label asp-for="Quantity"></label>
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="NHIS" class="form-control" placeholder="NHIS (Yes or No)"/>
                                    <label asp-for="NHIS"></label>
                                    <span asp-validation-for="NHIS" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <input type="submit" value="Add" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Medicines">Back to List</a>
                    </div>
                </div>
            </div>

            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
        </div>
    </main>
</body>
</html>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}
