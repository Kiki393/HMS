@model HMS.Models.ViewModels.ResetPasswordVm
@{
    Layout = "_LoginAndRegLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password</title>
</head>
<body>
    <main>
        <!-- Section -->
        <section class="vh-lg-100 mt-5 mt-lg-0 bg-soft d-flex align-items-center">
            <div class="container">
                <p class="text-center">
                    <a class="d-flex align-items-center justify-content-center" asp-controller="Account" asp-action="Login">
                        <svg class="icon icon-xs me-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
                        Back to login page
                    </a>
                </p>
                <div class="row justify-content-center form-bg-image" data-background-lg="~/assets/img/illustrations/signin.svg">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="bg-white shadow border-0 rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                            <div class="text-center text-md-center mb-4 mt-md-0">
                                <h1 class="mb-0 h3">Reset Password </h1>
                            </div>
                            <form method="post" asp-action="ResetPassword" id="account" class="mt-4">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <input asp-for="Code" type="hidden" />
                                <!-- Form -->
                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <label asp-for="Email"></label>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Password" class="form-control" placeholder=" New Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <label asp-for="Password"></label>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <label asp-for="ConfirmPassword"></label>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-gray-800">Submit</button>
                                </div>
                                <!-- End of Form -->
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
</html>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}