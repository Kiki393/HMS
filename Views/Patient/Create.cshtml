@model Patients

@{
    ViewData["Title"] = "Add New Patient";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add New Patient</title>
</head>
<body>
    <main>
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <!-- Page Heading -->
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-controller="Patient" asp-action="Index">Patients</a></li>
                <li class="breadcrumb-item active">Add New Patient</li>
            </ol>

            <!-- Body -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Add New Patient</h6>
                </div>
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-8">
                            <form asp-action="Create" method="post" id="patient" class="mt-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="NHIS" class="form-control" placeholder="NHIS Id" />
                                    <label asp-for="NHIS"></label>
                                    <span asp-validation-for="NHIS" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Full Name" />
                                    <label asp-for="Name"></label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input type="date" asp-for="Dob" class="form-control" />
                                    <label asp-for="Dob"></label>
                                    <span asp-validation-for="Dob" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Age" class="form-control" placeholder="Age" />
                                    <label asp-for="Age"></label>
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Contact" class="form-control" placeholder="Contact" />
                                    <label asp-for="Contact"></label>
                                    <span asp-validation-for="Contact" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group form-floating mb-3">
                                    <input asp-for="Address" class="form-control" placeholder="Address" />
                                    <label asp-for="Address"></label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <input type="submit" value="Add" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>

            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
        </div>
    </main>
</body>
</html>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}