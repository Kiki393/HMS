@model Messages
@{
    ViewData["Title"] = "Delete Message";
    Layout = "_AdminLayout";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="ListOfMessages">All Messages</a></li>
        <li class="breadcrumb-item active">Delete Message</li>
    </ol>

    <!-- Body -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Delete Message</h6>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this message?</h3>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Message)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Message)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Reply)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Reply)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                </dl>

                <form asp-action="DeleteMessage">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="ListOfMessages">Back to List</a>
                </form>
            </div>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
</div>